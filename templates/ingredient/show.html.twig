{% extends 'base.html.twig' %}

{% block title %}Ingrédients{% endblock %}

{% block main %}
    <div class="container d-flex justify-content-between">
        <div class="row"></div>
        {{ include('partials/_adminnav.html.twig') }}
        <main class="col-9 border border-light bg-white p-2">
            <h1>Ingrédients</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ingredient.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ ingredient.name }}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-secondary" href="{{ path('app_ingredient_index') }}">retour à la liste</a>

            <a class="btn btn-success" href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">Modifier</a>

            {{ include('ingredient/_delete_form.html.twig') }}
        </main>
    </div>

{% endblock %}
