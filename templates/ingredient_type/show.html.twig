        <div class="row"></div>
        {{ include('partials/_adminnav.html.twig') }}
        <main class="col-9 border border-light bg-white p-2">
            <h1>Types d'ingrédients </h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ingredient_type.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ ingredient_type.name }}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-secondary"  href="{{ path('app_ingredient_type_index') }}">retour à la liste</a>


        </main>
    </div>

{% endblock %}
