{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/payment-cancel.css') }}">
{% endblock %}
{% block header %}
    {{ include('partials/_header.html.twig') }}
{% endblock %}
{% block menu %}
    {{ include('partials/_menu.html.twig') }}
{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="fw-body">
            Oups, une erreur s'est produite et le paiement a échoué !
        </h1>
        <img src="{{ asset('image/error.svg') }}">
        <form class="checkout" action="/payment/checkout" method="POST">
            <button class="button button--primary" type="submit">Rééssayer</button>
        </form>
    </div>
{% endblock %}


